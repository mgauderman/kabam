<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <stroke
                android:color="#fff55454"
                android:width="2dp"/>
            <corners
                android:radius="0dp" />
            <padding
                android:left="20dp"
                android:top="3dp"
                android:right="20dp"
                android:bottom="3dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <stroke
                android:color="#fff55454"
                android:width="2dp"/>
            <corners
                android:radius="0dp" />
            <padding
                android:left="20dp"
                android:top="3dp"
                android:right="20dp"
                android:bottom="3dp" />
        </shape>
    </item>

    <item>
        <shape>
            <stroke
                android:color="#fff55454"
                android:width="2dp"/>
            <corners
                android:radius="0dp" />
            <padding
                android:left="20dp"
                android:top="3dp"
                android:right="20dp"
                android:bottom="3dp" />
        </shape>
    </item>
</selector>