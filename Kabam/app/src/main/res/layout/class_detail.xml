<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:weightSum="1">

    <TextView
        android:layout_marginTop="5dp"
        style="@style/TVTheme.Large"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Test Class"
        android:id="@+id/className"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_marginBottom="5dp"
        style="@style/TVTheme.Medium"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0 Enrolled"
        android:id="@+id/classEnrolled"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            style="@style/BTheme.Large"
            android:background="@drawable/red_button_thin"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:ems="2"
            android:text="Events"
            android:id="@+id/eventButton"
            android:layout_weight="1" />

        <Button
            style="@style/BTheme.Large"
            android:background="@drawable/red_button_thin"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:ems="2"
            android:text="+"
            android:id="@+id/addEventButton"
            android:layout_weight="1" />

        <Button
            style="@style/BTheme.Large"
            android:background="@drawable/red_button_thin"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:ems="2"
            android:text="Chats"
            android:id="@+id/chatButton"
            android:layout_weight="1" />

        <Button
            style="@style/BTheme.Large"
            android:background="@drawable/red_button_thin"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:ems="2"
            android:text="+"
            android:id="@+id/addChatButton"
            android:layout_weight="1" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            style="@style/BTheme.Medium"
            android:background="@drawable/red_button"
            android:text="Enroll in this class!"
            android:id="@+id/enrollButton" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/classDetailList"
            android:layout_gravity="center_horizontal" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chatView"
            android:layout_gravity="center_horizontal"
            />

    </FrameLayout>

</LinearLayout>