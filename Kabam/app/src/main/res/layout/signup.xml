<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        style="@style/ETTheme.Wide"
        android:background="@drawable/red_edittext"
        android:textSize="23dp"
        android:layout_width="match_parent"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/firstName"
        android:hint="First Name" />

    <EditText
        style="@style/ETTheme.Wide"
        android:background="@drawable/red_edittext"
        android:textSize="23dp"
        android:layout_width="match_parent"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/lastName"
        android:layout_gravity="center_horizontal"
        android:hint="Last Name" />

    <EditText
        style="@style/ETTheme.Wide"
        android:background="@drawable/red_edittext"
        android:textSize="23dp"
        android:layout_width="match_parent"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email"
        android:layout_gravity="center_horizontal"
        android:hint="Email" />

    <EditText
        style="@style/ETTheme.Wide"
        android:background="@drawable/red_edittext"
        android:textSize="23dp"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:layout_gravity="center_horizontal"
        android:hint="Password" />

    <EditText
        style="@style/ETTheme.Wide"
        android:background="@drawable/red_edittext"
        android:textSize="23dp"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/confirmPassword"
        android:layout_gravity="center_horizontal"
        android:hint="Confirm Password" />

    <com.facebook.login.widget.LoginButton
        android:textSize="18dp"
        android:id="@+id/facebook_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:onClick="onFacebookLoginClick" />

    <Button
        style="@style/BTheme.Large"
        android:background="@drawable/red_button_wide"
        android:text="Create Account"
        android:id="@+id/createAccount"
        android:layout_gravity="center_horizontal"
        android:onClick="onCreateAccountClick" />

</LinearLayout>