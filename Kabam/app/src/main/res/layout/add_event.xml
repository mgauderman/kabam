<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/addEventScrollView"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Space
            android:layout_height="30dp"
            android:layout_width="1dp" />

        <TextView
            style="@style/TVTheme.Large"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ClassHere"
            android:id="@+id/addEventClass"
            android:layout_gravity="center_horizontal" />

        <TextView
            style="@style/TVTheme.Medium"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="x Enrolled"
            android:id="@+id/addEventNumEnrolled"
            android:layout_gravity="center_horizontal" />

        <Space
            android:layout_height="30dp"
            android:layout_width="1dp" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#000000" />

        <EditText
            style="@style/ETTheme.Wide"
            android:background="@drawable/red_edittext"
            android:layout_marginTop="10dp"
            android:inputType="textPersonName"
            android:hint="@string/event_name"
            android:ems="15"
            android:id="@+id/addEventEventName"
            android:singleLine="true"
            android:editable="true" />

        <Space
            android:layout_height="20dp"
            android:layout_width="1dp" />
        <TextView
            android:ems="12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Event Type:"
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal" />

        <RadioGroup
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <RadioButton
                android:buttonTint="#fff55454"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assignment"
                android:layout_marginLeft="30dp"
                android:id="@+id/addEventIsAssignment"
                android:checked="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event"
                android:layout_marginLeft="30dp"
                android:id="@+id/addEventIsEvent" />
        </RadioGroup>

        <Space
            android:layout_height="20dp"
            android:layout_width="1dp" />

        <EditText
            style="@style/ETTheme.Wide"
            android:background="@drawable/red_edittext"
            android:inputType="textPersonName"
            android:hint="@string/event_date_due_date"
            android:ems="15"
            android:id="@+id/addEventDueDate"
            android:singleLine="true"
            android:editable="true" />

        <Space
            android:layout_height="20dp"
            android:layout_width="1dp" />

        <TimePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addEventTimePicker"
            android:layout_gravity="center_horizontal" />

        <Space
            android:layout_height="20dp"
            android:layout_width="1dp" />

        <EditText
            style="@style/ETTheme.Wide"
            android:background="@drawable/red_edittext"
            android:inputType="textPersonName"
            android:hint="Event Location"
            android:ems="15"
            android:id="@+id/addEventLocation"
            android:singleLine="true"
            android:editable="true" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="248dp"
            android:hint="@string/description"
            android:id="@+id/addEventDescription"
            android:background="@drawable/border_style"
            android:layout_gravity="center_horizontal"
            android:gravity="top|left"
            android:layout_marginTop="20dp"/>

        <Space
            android:layout_height="20dp"
            android:layout_width="1dp" />
        <Button
            style="@style/BTheme.Medium"
            android:background="@drawable/red_button_wide"
            android:text="Submit"
            android:id="@+id/addEventSubmitButton"
            android:nestedScrollingEnabled="true" />
        <Space
            android:layout_height="30dp"
            android:layout_width="1dp" />

    </LinearLayout>
</ScrollView>